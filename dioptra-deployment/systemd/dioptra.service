[Unit]
Description=Dioptra service
Requires=docker.socket 
After=docker.socket 
Wants=syslog.service

[Service]
Type=oneshot
User=root
WorkingDirectory=/home/nilsb/dioptra-deployments/dioptra-deployment
ExecStart=docker compose up -d --remove-orphans --force-recreate
ExecReload=docker compose restart
ExecStop=docker compose down --remove-orphans
RemainAfterExit=true

[Install]
WantedBy=multi-user.target